<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FileComplaint">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Number"
        android:id="@+id/comnumber"
        android:textSize="20dp"
        android:maxLength="10"
        android:inputType="number"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Name"
        android:layout_below="@+id/comnumber"
        android:id="@+id/name"
        android:textSize="20dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Aadhar Number"
        android:layout_below="@+id/name"
        android:id="@+id/aadhar"
        android:textSize="20dp"
        android:inputType="number"
        android:maxLength="12"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Email-id"
        android:id="@+id/email"
        android:layout_below="@+id/aadhar"
        android:textSize="20dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="Enter Your Complaint"
        android:id="@+id/complaint"
        android:layout_below="@+id/email"
        android:textSize="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comsubmit"
        android:layout_below="@+id/complaint"
        android:layout_centerHorizontal="true"
        android:text="Submit"/>

</RelativeLayout>